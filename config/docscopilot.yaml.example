# DocsCopilot Configuration File Example (YAML)
# Copy this file to docscopilot.yaml and customize for your environment
# Environment variables override values in this file

# Server Configuration
server:
  workspace_root: /workspace
  log_level: INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
  host: 0.0.0.0
  port: 8000

# Code Context Server Configuration
code_context:
  git_binary: git
  supported_languages:
    - python
    # Add more languages as needed: javascript, go, rust, etc.

# Templates + Style Server Configuration
templates_style:
  # Optional: Path to external templates repository
  # If not set, uses workspace .docscopilot/ or built-in defaults
  templates_path: null

# Docs Repo Server Configuration
docs_repo:
  # Note: Tokens should be set via environment variables for security
  # GITHUB_TOKEN and GITLAB_TOKEN environment variables override these
  # github_token: null  # Set via GITHUB_TOKEN env var instead
  # gitlab_token: null  # Set via GITLAB_TOKEN env var instead
  
  # API Configuration (supports self-hosted instances)
  # github_api_base_url: "https://api.github.com"  # GitHub Enterprise: "https://github.example.com/api/v3"
  # gitlab_api_base_url: "https://gitlab.com/api/v4"  # Self-hosted: "https://gitlab.example.com/api/v4"
  # github_host: "github.com"  # GitHub Enterprise: "github.example.com"
  # gitlab_host: "gitlab.com"  # Self-hosted: "gitlab.example.com"
  
  # Timeouts (inherited from server config, can override)
  # git_command_timeout: 30  # Timeout for git commands in seconds
  # api_request_timeout: 30  # Timeout for API requests in seconds
  
  # Retry Configuration
  # api_retry:
  #   total: 3  # Total number of retry attempts
  #   backoff_factor: 1  # Backoff factor for exponential backoff
  #   status_forcelist: [429, 500, 502, 503, 504]  # HTTP status codes that trigger retry
  
  # Paths and Defaults
  # docs_directory: "docs"  # Directory name for documentation files
  # default_doc_type: concept  # Default document type when not specified
  # default_base_branch: main  # Default base branch for pull requests
  # repo_mode: "same"  # Repository mode: "same" or "external"
  
  # Document Type Directory Mapping
  # doc_type_directories:  # Mapping of document types to directory names
  #   concept: concepts
  #   task: tasks
  #   api_reference: api
  #   release_notes: releases
  #   feature_overview: features
  #   configuration_reference: configuration


